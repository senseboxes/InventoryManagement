<p id="notice"><%= notice %></p>

	<div class="container">
		<h1 class="bg-info" align="center">생산품명 목록</h1>
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" href="#pcategories">분류 목록</a>
					</h4>
				</div>

				<div id="pcategories" class="panel-collapse collapse">
					<ul class="list-group">
							<li class="list-group-item"><a href="/productnameset">ALL</a></li>
						<% @categories.each do |c| %>
							<li class="list-group-item"><a href="/productnameset_sort/<%= c.id %>"> <%= c.name %> </a></li>
						<% end %>
					</ul>
					<div class="panel-footer"></div>
				</div>
			</div>
		</div>


				<table class="table table-hover">
					<thead>
						<tr>
							<th>생산품명</th>
		    		</tr>
					</thead>

					<tbody>
						<% @productnameset.each do |pns| %>
						<form action="productnameset/<%= pns.id %>" method="post">
		  				<tr>
		  					<td><%= pns.productname %></td>
								<td align="right">
									<a data-confirm="정말로 삭제하시겠습니까?"><button type="submit" class="btn btn-warning btn-xs">삭 제</button></a>
								</td>
		  				</tr>
							</form>
		    		<% end %>
					</tbody>
				</table>
				<div class="digg_pagination">
			    <div class="page_info">
			      <%= page_entries_info @productnameset %>
			    </div>
			    <%= will_paginate @productnameset, :container => false %>
			  </div>
				<br>
			<div class="button">
      	<a href="/productnameset_write"><button type="button" class="btn btn-default">생산품명 등록</button></a> | <a href="/."><button type="button" class="btn btn-default">처음으로</button></a>
			</div>
