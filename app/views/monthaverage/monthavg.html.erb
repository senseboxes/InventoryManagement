      				<th>5월</th>
      				<th>6월</th>
      				<th>7월</th>
      				<th>8월</th>
      				<th>9월</th>
      				<th>10월</th>
      				<th>11월</th>
      				<th>12월</th>
      				<th>연 합계</th>
      				<th>연 평균</th>
    			</tr>
			</thead>
			<tbody>
				<% @yeardroplist.each do |m| %>
      			<tr>
      				<td><%= m.y_index %></td>
  					<td><%= m.inven_name %></td>
  					<td><%= m.january %></td>
  					<td><%= m.february %></td>
  					<td><%= m.march %></td>
  					<td><%= m.april %></td>
  					<td><%= m.may %></td>
  					<td><%= m.june %></td>
  					<td><%= m.july %></td>
  					<td><%= m.august %></td>
  					<td><%= m.september %></td>
  					<td><%= m.october %></td>
  					<td><%= m.november %></td>
  					<td><%= m.december %></td>
  					<td><%= m.y_sum %></td>
  					<td><%= m.y_avg %></td>

  				</tr>
      			<% end %>

			</tbody>
		</table>

        </div>
